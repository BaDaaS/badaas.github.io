---
const themes = [
  { value: "", label: "Classic (Gold)" },
  { value: "minimal", label: "Minimal (White)" },
  { value: "corporate", label: "Corporate (Blue)" },
  { value: "warm", label: "Warm (Amber)" },
  { value: "ocean", label: "Ocean (Cyan)" },
];
---

<div class="fixed right-5 bottom-5 z-[100] flex items-center gap-2.5">
  <label for="theme-select" class="text-text-muted text-xs">Theme:</label>
  <select
    id="theme-select"
    class="border-border bg-bg-secondary text-text hover:border-accent focus:border-accent cursor-pointer border px-3 py-2 font-mono text-xs transition-colors focus:outline-none"
  >
    {themes.map(theme => <option value={theme.value}>{theme.label}</option>)}
  </select>
</div>

<script>
  const select = document.getElementById("theme-select") as HTMLSelectElement;
  const html = document.documentElement;

  // Load saved theme
  const savedTheme = localStorage.getItem("theme") || "";
  if (savedTheme) {
    html.setAttribute("data-theme", savedTheme);
    select.value = savedTheme;
  }

  // Handle theme change
  select.addEventListener("change", () => {
    const theme = select.value;
    if (theme) {
      html.setAttribute("data-theme", theme);
      localStorage.setItem("theme", theme);
    } else {
      html.removeAttribute("data-theme");
      localStorage.removeItem("theme");
    }
  });
</script>
