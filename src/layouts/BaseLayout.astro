---
import "../styles/global.scss";
import IconTwitter from "../components/icons/IconTwitter.astro";
import IconLinkedIn from "../components/icons/IconLinkedIn.astro";
import IconGitHub from "../components/icons/IconGitHub.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Applied Mathematics & Cryptography Lab" } =
  Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="BaDaaS" />
    <link rel="icon" href="/res/Official_BaDaaS_Logo.png" type="image/png" />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/res/Official_BaDaaS_Logo.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="/res/Official_BaDaaS_Logo.png" />
  </head>
  <body>
    <nav class="nav">
      <a href="/" class="nav__logo">BaDaaS</a>
      <div class="nav__links">
        <a href="/#services" class:list={{ active: currentPath === "/" }}
          >What we do</a
        >
        <a href="/#portfolio">Clients</a>
        <a href="/blog" class:list={{ active: currentPath.startsWith("/blog") }}
          >Blog</a
        >
        <a href="https://calendly.com/be-danny-willems/30min" class="nav__cta"
          >Book a call</a
        >
      </div>
    </nav>

    <slot />

    <footer class="footer">
      <div class="footer__content">
        <div class="footer__brand">
          <a href="/" class="footer__logo">BaDaaS</a>
          <p class="footer__tagline">
            We use abstract mathematics to build concrete applications.
          </p>
          <div class="footer__social">
            <a href="https://twitter.com/be_badaas" aria-label="Twitter">
              <IconTwitter />
            </a>
            <a
              href="https://linkedin.com/company/bebadaas"
              aria-label="LinkedIn"
            >
              <IconLinkedIn />
            </a>
            <a href="https://github.com/BaDaaS" aria-label="GitHub">
              <IconGitHub />
            </a>
          </div>
        </div>

        <div class="footer__links">
          <div class="footer__column">
            <h4>What we do</h4>
            <a href="/#services">Audits</a>
            <a href="/#services">Research</a>
            <a href="/#services">Development</a>
            <a href="/#services">Consulting</a>
          </div>

          <div class="footer__column">
            <h4>Resources</h4>
            <a href="/blog">Blog</a>
            <a href="https://cryptography.academy" target="_blank"
              >Cryptography Academy</a
            >
          </div>

          <div class="footer__column">
            <h4>Company</h4>
            <a href="/#portfolio">Clients</a>
          </div>

          <div class="footer__column">
            <h4>Contact</h4>
            <a href="mailto:contact@badaas.be">contact@badaas.be</a>
            <p>Belgium</p>
          </div>
        </div>
      </div>

      <div class="footer__bottom">
        <p>&copy; {new Date().getFullYear()} BaDaaS. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
