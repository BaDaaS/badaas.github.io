---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
}

const { title, description, pubDate, updatedDate } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<BaseLayout title={`${title} | BaDaaS Blog`} description={description}>
  <article class="prose max-w-content mx-auto px-5 pt-24 pb-16">
    <h1 class="mb-2.5 text-4xl md:text-[2.5rem]">{title}</h1>
    <time
      class="text-text-muted mb-10 block text-sm"
      datetime={pubDate.toISOString()}
    >
      {formatDate(pubDate)}
      {updatedDate && <span> (Updated: {formatDate(updatedDate)})</span>}
    </time>
    <slot />
  </article>
</BaseLayout>
